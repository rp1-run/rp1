{
  "name": "rp1-web-ui",
  "version": "0.1.0",
  "description": "Read-only markdown viewer for rp1 artifacts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "rm -rf dist && concurrently -k -n server,client -c blue,green \"bun run dev:server\" \"bun run dev:client\"",
    "dev:client": "vite --open",
    "dev:server": "NODE_ENV=development bun run src/cli.ts ../..",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun run src/cli.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "rehype-raw": "^7.0.0",
    "gray-matter": "^4.0.3",
    "shiki": "^1.24.0",
    "mermaid": "^11.4.0",
    "fp-ts": "^2.16.9",
    "lucide-react": "^0.468.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "react-resizable-panels": "^2.1.7"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  },
  "bin": {
    "rp1-ui": "./bin/rp1-ui"
  }
}
