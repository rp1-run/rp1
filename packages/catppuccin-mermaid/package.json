{
  "name": "@rp1/catppuccin-mermaid",
  "version": "1.0.0",
  "description": "Catppuccin color theme for Mermaid.js diagrams",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./css/*": "./dist/css/*",
    "./mkdocs": {
      "import": "./dist/mkdocs/catppuccin-mermaid.js",
      "style": "./dist/mkdocs/catppuccin-mermaid.css"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:esm && bun run build:cjs && bun run build:types && bun run build:css && bun run build:mkdocs",
    "build:esm": "bun build src/index.ts --outfile=dist/index.js --format=esm",
    "build:cjs": "bun build src/index.ts --outfile=dist/index.cjs --format=cjs",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:css": "bun run scripts/generate-css.ts",
    "build:mkdocs": "bun run scripts/generate-mkdocs.ts",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "mermaid",
    "catppuccin",
    "theme",
    "diagrams",
    "color-scheme"
  ],
  "author": "rp1",
  "license": "MIT",
  "peerDependencies": {
    "mermaid": ">=10.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.3.0"
  }
}
